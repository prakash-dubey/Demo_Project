<%#@wishlists.each do |wishlist|%>
<%#= wishlist.product.name %>
<%#end%>

<section id="cart_items">
		<div class="container">
			<div class="breadcrumbs">
				<ol class="breadcrumb">
				  <li><%= link_to "Home", root_path %></li>
				  <li class="active">Shopping Cart</li>
				</ol>
			</div>
			<div class="table-responsive cart_info">
				<table class="table table-condensed">
					<thead>
						<tr class="cart_menu">
							<td class="image">image</td>
							<td class="description">Name</td>
							<td class="price">Price</td>
							<td class="quantity">Remove</td>
							<td></td>
							<!-- <td class="total"></td> -->
							
						</tr>
					</thead>
					<tbody>
						<tr>
							<% @wishlists.each do |wishlist|%>
							<!-- <td>
									<%#= wishlist.id %>
							</td> -->
							<td class="cart_product">								 
									<% if wishlist.product.product_images.count > 0 %> 
									<%= image_tag(wishlist.product.product_images.first.image.url ) %>
									<% else %>
									<%= image_tag("home/gallery3.jpg", alt: "") %>
									<% end %>									
							</td>
							<td class="cart_description">
								<h4><%= link_to wishlist.product.name%></h4>							
							</td>
							<td class="cart_price">
								<%= wishlist.product.price %>							
							</td>
							<td class="cart_delete">
								<%= link_to '<i class="fa fa-times"></i>'.html_safe,wishlist_path(wishlist.id), :class=>"cart_quantity_delete",
								method: :delete,
              data: { confirm: 'Are you sure?' } %>
								<!-- <a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a> -->
							</td>
							<td>
								<%= link_to "Add to Cart", addresses_path, :class => "btn btn-default check_out"%>
							</td>
						
						</tr>						
					</tbody>					
					<% end %>
				</table>			
			</div>
		</div>
</section>
