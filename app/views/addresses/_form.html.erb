<div class ="row">
    <div class ="col-sm-4">
        <div class ="shopper-info">
                    <h2>My Address</h2> 
            <%= form_for @address do |f| %>
                <%= f.label :name %><br><%= f.text_field :name %>
               <%= f.label :address_1 %><br><%= f.text_field :address_1 %>
               <%= f.label :address_2 %><br><%= f.text_field :address_2 %>
               <%= f.label :city %><br><%= f.text_field :city %>
               <%= f.label :country %><br><%= f.text_field :country %>
               <%= f.label :state %><br><%= f.text_field :state %>
               <%= f.label :zipcode %><br><%= f.text_field :zipcode %>
                <%= button_tag 'Submit',{ class:'btn btn-primary'} %>
            <% end %>        
        </div>
    </div>
</div>
